#single-post-show
  = render "authors/author_header", :author => @post.author, :post_header => true, :condensed => false
  .mt-40
    = render "posts/post", :post => @post

  - if !@post.unlisted
    %hr
    #single-post-footer
      #subscription-form.centered
        = render "authors/subscription_form", :author => @post.author
      %p.mt-30
        More from
        %a.author-name{"href" => "/@#{@post.author.username}"}
          = @post.author.title + ":"
        .posts
          - if @author_posts && @author_posts.length > 0
            - @author_posts.each do |tied_post|
              %strong
                %a.block{"href" => "#{tied_post.author_relative_url}"}
                  = tied_post.title
